#:kivy 1.10.0

<HomeScreen>
    RelativeLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0, 1, 0, 1
            Rectangle:
                # self here refers to the widget i.e BoxLayout
                pos: self.pos
                size: self.size
        Label:
            text: 'Photobooth'
            pos_hint: { 'center_x': 0.5, 'center_y': 0.75}
            font_size: 100
        Button:
            id: startButton
            text: 'Start'
            size_hint: 0.5, 0.2
            pos_hint: { 'center_x': 0.5, 'center_y': 0.2 }
            height: "40dp"
            on_press: root.manager.current = 'picture'

<PictureScreen>
    infoPopup: infoPopup.__self__
    on_enter: root.infoPopup.open()
    BoxLayout:
        id: bl
        orientation: "vertical"
        Popup:
            id: infoPopup
            title: "Information"
            size_hint: 0.5, 0.5
            auto_dismiss: False
            on_parent:
                if self.parent == bl: self.parent.remove_widget(self)
            BoxLayout:
                id: content_box
                orientation: "vertical"
                ScrollView:
                    Label:
                        id: content_text
                        text_size: self.width, None
                        height: self.texture_size[1]
                        text: "Text goes here"
                        valign: 'center'
                        halign: 'center'
                Button:
                    id: ok
                    text: "OK"
                    size_hint_y: None
                    height: "40dp"
                    on_release:
                        infoPopup.dismiss()
                        number.text = '5'
                        countdown_event = root.schedule_countdown()
        RelativeLayout:
            Camera:
                id: camera
                play: True
                resolution: 2000,2000
            Label:
                id: number
                text: ''
                font_size: 150
                pos_hint: { 'center_x': 0.5, 'center_y': 0.5 }

<PrintScreen>
    on_pre_enter: root.generate_collage()
    BoxLayout:
        RelativeLayout:
            Label:
                id: copies_text
                text: "Select the number of copies to be printed."
                pos_hint: { 'center_x': 0.5, 'center_y': 0.8 }
                text_size: self.width, None
                height: self.texture_size[1]
                valign: 'center'
                halign: 'center'
            Label:
                id: slider_text
                text: str(int(slider_id.value))
                pos_hint: { 'center_x': 0.5, 'center_y': 0.7 }
                text_size: self.width, None
                height: self.texture_size[1]
                valign: 'center'
                halign: 'center'
            Slider:
                id: slider_id
                min: 0
                max: 5
                step: 1
                value_track: True
                value_track_color: [0, 1, 0, 1]
                pos_hint: { 'center_x': 0.5, 'center_y': 0.65 }
                size_hint_x: 0.5
            Button:
                id: print_button
                text: "Print"
                pos_hint: { 'center_x': 0.5, 'center_y': 0.4 }
                size_hint: 0.5, 0.1
                on_release:
                    root.scale_print_collage()
            Button:
                id: email_button
                text: "Email Only"
                pos_hint: { 'center_x': 0.5, 'center_y': 0.25 }
                size_hint: 0.5, 0.1
                on_release:
                    root.manager.current = 'email'
        Image:
            id: preview

<EmailRow>:
    padding: dp(8)
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    Label:
        text: root.value
    Button:
        id: remove
        text: "Remove"
        size_hint_x: 0.25
        on_release:
            root.delete(root.value)

<ConfirmPopup>:
    cols:1
	Label:
		text: root.text
	GridLayout:
		cols: 2
		size_hint_y: None
		height: '44sp'
		Button:
			text: 'Yes'
			on_release: root.dispatch('on_answer','yes')
		Button:
			text: 'No'
			on_release: root.dispatch('on_answer', 'no')

<EmailScreen>:
    BoxLayout:
        RelativeLayout:
            size_hint_x: 0.5
            Label:
                pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                size_hint_y: 0.9
                valign: 'top'
                halign: 'center'
                text: "Please add email addresses.\nWhen done press Send.\n\nSkip sending emails by pressing Skip."
            BoxLayout:
                size_hint_y: 0.1
                valign: 'bottom'
                Button:
                    id: send_email
                    text: "Send"
                    size_hint_x: 0.5
                    on_release:
                        root.send()
                Button:
                    id: skip_email
                    text: "Skip"
                    size_hint_x: 0.5
                    on_release:
                        root.skip()
        BoxLayout:
            id: email_bl
            size_hint_x: 0.5
            canvas:
                Color:
                    rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            rv: rv
            orientation: 'vertical'
            GridLayout:
                cols: 3
                rows: 2
                size_hint_y: None
                height: dp(55)
                padding: dp(8)
                BoxLayout:
                    spacing: dp(8)
                    TextInput:
                        id: email_input
                        hint_text: 'Enter email'
                        padding: dp(10), dp(10), 0, 0
                        multiline: False
                        on_text: root.test_email(email_input.text)
                    Button:
                        id: add_email
                        text: 'Add'
                        size_hint_x: 0.25
                        on_release: root.insert(email_input.text)

            RecycleView:
                id: rv
                scroll_type: ['bars', 'content']
                scroll_wheel_distance: dp(114)
                bar_width: dp(10)
                viewclass: 'EmailRow'
                RecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(2)
